@page "/companies/edit/{companyName}"

@*Getting HttpClient class*@
@inject HttpClient http

@*For redirecting purposes*@
@inject NavigationManager Navigation

<h3>UpdateCompany</h3>

<CompanyForm buttonText = "Update Company" companyModel = "@company" OnValidSubmit = "@UpdateCompanyByName">

</CompanyForm>


@code {
    [Parameter] public string companyName { get; set; }

    CompanyModel company = new CompanyModel();

    protected async override Task OnParametersSetAsync()
    {
        company = await http.GetFromJsonAsync<CompanyModel>($"api/company/{companyName}");
    }

    async Task UpdateCompanyByName()
    {
        await http.PutAsJsonAsync("api/company", company);
        Navigation.NavigateTo("/companies");
    }
}
