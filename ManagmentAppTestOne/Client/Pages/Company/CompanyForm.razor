@page "/companies/companyform"


<EditForm Model="@company" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator></DataAnnotationsValidator>

    <h4 id="add-company-text">Manage <br> Your Companies</h4>

    <div class="form-group">
        <label id="label-text" for="InputComapnyName">Company Name</label>
        <InputText @bind-Value="company.CompanyName" class="form-control"
            aria-describedby="emailHelp" placeholder="Enter company name"></InputText>
        <ValidationMessage For="@(() => company.CompanyName)" />
    </div>

    <div class="form-group">
        <label id="label-text" for="InputComapnyType">Company Type</label>
        <InputTextArea @bind-Value="company.CompanyDescription" class="form-control"
            aria-describedby="emailHelp" placeholder="Enter company type"></InputTextArea>
        <ValidationMessage For="@(() => company.CompanyDescription)" />
    </div>

    <div class="form-group">
        <label id="label-text" for="InputComapnyDate">Established Date</label>
        <InputDate  @bind-Value="company.EstablishedDate" class="form-control"
            aria-describedby="emailHelp" placeholder="Enter started date"></InputDate>
        <ValidationMessage For="@(() => company.EstablishedDate)" />
    </div>

    <div class="form-group">
        <label id="label-text" for="InputComapnyEmployeeNum">Number of Employees</label>
        <InputNumber  @bind-Value="company.NumOfEmployees" class="form-control"
            aria-describedby="emailHelp" placeholder="Enter number of employees"></InputNumber>
        <ValidationMessage For="@(() => company.NumOfEmployees)" />
    </div>

    <button type="submit" class="btn company-btn">@buttonText</button>

</EditForm>

@code {
    [Parameter] public CompanyEntity company { get; set; }
    [Parameter] public string buttonText { get; set; } = "Save Company";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
